<p id="notice"><%= notice %></p>

<h1>Listing Task Applications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_applications.each do |task_application| %>
      <tr>
        <td><%= task_application.user %></td>
        <td><%= task_application.task %></td>
        <td><%= task_application.status %></td>
        <td><%= link_to 'Show', task_application %></td>
        <td><%= link_to 'Edit', edit_task_application_path(task_application) %></td>
        <td><%= link_to 'Destroy', task_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

